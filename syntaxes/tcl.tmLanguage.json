{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tcl",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "namespace"
		},
		{
			"include": "#keywords"
		},
		{
            "include": "#variables"
        },
		{
			"include": "#strings"
		},
		{
			"include": "#naviserver_cmds"
		},
		{
			"include": "#nx"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.tcl",
			"match": "#.*$"
		},
		"namespace":{
			"patterns": [
				{
					"name": "namespace.separator.tcl",
					"match": "\\b::\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "commands.tcl",
					"match": "\\b(puts|set|pwd|append|apply|cd|tell|unset|exit|if|elseif|else|while|for|foreach|return|break|continue|lappend|lassign|lindex|linsert|list|llength|lmap|lrange|lremove|lrepeat|lreplce|lreverse|dict|package|incr)\\b"
				},
				{
					"name": "command.option.tcl",
					"match": "\\-[a-zA-Z]+\\b"
				},
				{
					"name": "namespace.command.tcl",
					"match": "\\b(namespace)\\b"
				},
				{
					"name": "package.subcommand.tcl",
					"match": "(?<=\\bpackage\\b\\s+)(\\w+)"
				},
				{
					"name": "dict.subcommand.tcl",
					"match": "(?<=\\bdict\\b\\s+)(\\w+)"
				}
			]
		},
		"variables": {
            "patterns": [
				{
					"name": "variable.name.tcl",
					"match": "(?<=\\bset\\b\\s+:)(\\w+)|(?<=\\bappend\\b\\s+:)(\\w+)|(?<=\\bset\\b\\s+)(\\w+)|(?<=\\bappend\\b\\s+)(\\w+)|(?<=\\bincr\\b\\s+)(\\w+)"
				},
                {
                    "name": "variable.other.tcl",
                    "match": "\\$[a-zA-Z_]+\\b|\\$\\{:[a-zA-Z_]+\\}"
                }
            ]
        },
		"strings": {
			"name": "string.quoted.double.tcl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tcl",
					"match": "\\\\."
				}
			]
		}, 
		"naviserver_cmds": {
			"patterns": [
				{
					"name": "ns.commands.tcl",
					"match": "\\bns_\\w+\\b"
				},
				{
					"name": "ns.subcommand.tcl",
					"match": "(?<=\\bns_info\\b\\s+)(\\w+)|(?<=\\bns_adp_ctl\\b\\s+)(\\w+)"
				}
			]
		}, 
		"nx": {
			"patterns": [
				{
					"name": "nx.tcl",
					"match": "\\bnx::\\w+\\b"
				},
				{
					"name": "nx.subcommand.tcl",
					"match": "(?<=\\bnx::Class\\b\\s+)(\\w+)|(?<=\\bnx::Object\\b\\s+)(\\w+)"
				}
			]
		}
	},
	"scopeName": "source.tcl"
}